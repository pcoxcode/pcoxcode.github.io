<div class="select-group">
    <button class="button" id="dynamic-button">
        <span id="select-label-dynamic">Please Select Zone</span>
    </button>
    
    <div id="drop-down-dynamic" class="drop-down hidden-dynamic">
        { zone.map(select => 
            <label class="select-item-dynamic" for={`"select-item-${select}"`} id={`select-item2-${select}`}> {select}</label>
            <input class="option-dynamic" id={`"select-item-${select}"`} type="radio" />
        )}
    </div>
</div>

<script>

    const dynamicbutton = document.querySelector('#dynamic-button') 
    const selectdynamic = document.querySelector('#drop-down-dynamic')
    const options = document.querySelectorAll('.option-dynamic')
    const selectLabeldynamic = document.querySelector('#select-label-dynamic')

    dynamicbutton.addEventListener('click', function(event){
        event.preventDefault()
        toggleHiddendynamic()
    })


    function toggleHiddendynamic(){
        selectdynamic.classList.toggle('hidden-dynamic')
    }


    function setSelectdynamicTitle(event){
        const inputElement = document.getElementById(event.target.id)
        const labelElement = inputElement.previousElementSibling.textContent
        console.log(labelElement)
        selectLabeldynamic.innerText = labelElement;
       
    }
    
    options.forEach(function(option){
        option.addEventListener('click',
        function(event){
            setSelectdynamicTitle(event);
            toggleHiddendynamic();          
        })
    })


</script>



